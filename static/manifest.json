{
  "manifest_version": 2,
  "name": "Tx-Art",
  "version": "0.1.9",
  "description": "Generages a beautiful and unique art piece in the style of famous NFT collections and adds it into the transaction info page on Etherscan.",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Tx-Art",
    "default_popup": "popup.html"
  },
  "icons": {"128": "images/icon.png" },
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "*://*.etherscan.org/tx/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_specific_settings": {
    "gecko": {
      "id": "txart@artdgn.github.com"
    }
  }
}
